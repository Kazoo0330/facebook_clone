<!-- <div class="container"> -->
  <p id="notice"><%= notice %></p>

  <div class="row">
  <h1>Posts</h1>
  <table class="col-xs-12 col-md-6">
  <table>
    <thead>
      <tr>
        <th class="aaa name">Name</th>
        <th class="aaa title">Title</th>
        <th class="aaa content">Content</th>
        <th class="aaa image">Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class="aaa name"><%= post.user.name %></td>
          <td class="aaa title"><%= post.title %></td>
          <td class="aaa content"><%= post.content %></td>
          <td class="aaa image"><%= image_tag post.image.url.to_s %></td>

          <td><%= link_to 'Show', post %></td>
          <% if logged_in? %>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
